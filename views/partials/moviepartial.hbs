{{#if this.director}}
<div class="card mt-4">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image}}" class="card-img" alt="{{this.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/movies">Go Back</a>
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text"><small class="text-muted">{{this.director}}</small></p>
        <p class="card-text">{{this.description}}</p>
        <p><strong>stars</strong></p>
        <ul>
          {{#each this.stars}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        <p><strong>Showtimes</strong></p>
        <ul>
          {{#each this.showtimes}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="col-md-4 card-group">
  <div class="card my-4">
    <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}" />
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <a href="/movies/{{this._id}}">See more</a>
    </div>
  </div>
</div>
{{/if}}